{
  "ts-node": {
    "compilerOptions": {
      "types": ["@rspack/core/module"],
      "isolatedModules": true,
    },
    "paths": {
      "@/*": ["./src/*"],
    },
    "include": [
      "./src"
    ]
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": [
    "src",
  ],
  "exclude": ["node_modules"]
}